<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lesson3_registerapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_2"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lesson3_RegisterApp">
        
        <activity android:name=".PersonalActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible"
            android:label="@string/personal_info_page">
        </activity>

        <activity android:name=".CalculationActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible"
            android:label="@string/calculation_page">
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>